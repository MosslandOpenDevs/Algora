# Algora nginx configuration example
# This configuration serves static files directly from the filesystem
# to avoid blocking on Node.js SSR requests.
#
# Key optimizations:
# 1. Serve _next/static/* directly from .next/static/ (bypass Node.js)
# 2. Add proper cache headers for immutable assets
# 3. Enable gzip compression
# 4. Connection pooling and keep-alive

upstream algora_web {
    server localhost:3200;
    keepalive 32;
}

upstream algora_api {
    server localhost:3201;
    keepalive 32;
}

server {
    listen 80;
    server_name algora.moss.land;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name algora.moss.land;

    # SSL configuration (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/algora.moss.land/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/algora.moss.land/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/rss+xml application/atom+xml image/svg+xml;

    # Root directory for static files
    # Adjust this path to match your deployment
    root /home/ubuntu/Algora/apps/web;

    # CRITICAL: Serve Next.js static files directly (bypass Node.js)
    # This prevents static file requests from blocking behind SSR
    location /_next/static/ {
        alias /home/ubuntu/Algora/apps/web/.next/static/;
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        access_log off;
    }

    # Serve public directory files directly
    location /images/ {
        alias /home/ubuntu/Algora/apps/web/public/images/;
        expires 7d;
        add_header Cache-Control "public, max-age=604800";
        access_log off;
    }

    location /fonts/ {
        alias /home/ubuntu/Algora/apps/web/public/fonts/;
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        access_log off;
    }

    # Service worker and manifest
    location /sw.js {
        alias /home/ubuntu/Algora/apps/web/public/sw.js;
        add_header Cache-Control "no-cache";
    }

    location /manifest.json {
        alias /home/ubuntu/Algora/apps/web/public/manifest.json;
        add_header Cache-Control "no-cache";
    }

    # API routes - proxy to API server
    location /api/ {
        proxy_pass http://algora_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Timeouts
        proxy_connect_timeout 10s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://algora_api;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_connect_timeout 5s;
        proxy_read_timeout 5s;
    }

    # Socket.IO - proxy to API server with WebSocket support
    location /socket.io/ {
        proxy_pass http://algora_api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket timeouts
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
    }

    # Everything else - proxy to Next.js
    location / {
        proxy_pass http://algora_web;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Timeouts for SSR
        proxy_connect_timeout 10s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
}
